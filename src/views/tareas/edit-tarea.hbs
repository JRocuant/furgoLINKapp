<head>
    <link rel="stylesheet" href="/css/espera.css">
    <link rel="stylesheet" href="/css/footer.css">
    <style>
        .container {
            max-width: 400px;
            margin: 20px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            background: #fff;
        }
        .header {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 15px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }
        .btn {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }
        .btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<div class="container">
    <div class="header">Edit Tarea</div>
    <form action="/tareas/edit/{{tarea._id}}?_method=PUT" method="POST">
        <div class="form-group">
            <label for="idTarea">ID Tarea</label>
            <input type="text" name="idTarea" class="form-control" value="{{tarea.idTarea}}" required>
        </div>
        <button class="btn" type="submit">Confirmar</button>
    </form>
</div>


