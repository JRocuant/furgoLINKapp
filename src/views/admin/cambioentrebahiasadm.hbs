<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard - Coke Kronos</title>
  <link rel="stylesheet" href="/css/cambioentrebahiasadm.css" />
  <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
  <div class="sidebar">
    <h2>Dashboard</h2>
    <button onclick="window.location.href='/admin/usuarios'">Usuarios</button>
    <button onclick="window.location.href='/admin/transportes'">Transportes</button>
    <button onclick="window.location.href='/admin/cargarcamionadm'">Cargar Camión</button>
    <button onclick="window.location.href='/admin/retirarpalletadm'">Retiro de Pallet</button>
    <button onclick="window.location.href='/admin/inicio'">Inicio</button>
    <button onclick="window.location.href='/admin/tiempos'">Tiempos</button>
    <button class="logout-btn" id="logoutBtn">Cerrar Sesión</button>
  </div>

  <div class="content">
    <div class="header">
      <h1>Lista de los Cambios entre Bahías</h1>
      <div class="fecha">
        <strong>Miércoles 2 de abril de 2025</strong><br />
        16:00 hrs
      </div>
    </div>

    <table class="tasks-table">
      <tr>
        <th>Usuario</th>
        <th>Tarea</th>
        <th>Tiempo ejecución</th>
        <th>Turno</th>
        <th>Fecha</th>
        <th>Bahía Inicial</th>
        <th>Bahía Final</th>
        <th>Código Ticket del Pallet Cambiado</th>
      </tr>
      {{#each registros}}
      <tr>
        <td>{{nombreUsuario}}</td>
        <td>{{codigoTarea}}</td>
        <td>{{duracion}}</td>
        <td>{{turno}}</td>
        <td>{{formatDate operacionInicio}}</td>
        <td>{{bahiaInicial}}</td>
        <td>{{bahiaFinal}}</td>
        <td>{{palletCambiado}}</td>
      </tr>
      {{/each}}
    </table>
    <br>

<script>
  const logoutBtn = document.getElementById('logoutBtn');
  if (logoutBtn) {
      logoutBtn.addEventListener('click', () => {
          sessionStorage.clear();
          localStorage.clear();
          localStorage.removeItem('tareaActual');
          window.location.href = '/';
      });
  }
</script>

</body>
