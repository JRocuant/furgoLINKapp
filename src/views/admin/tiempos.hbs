<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard - Coke Kronos</title>
  <link rel="stylesheet" href="/css/tiempos.css" />
  <link rel="stylesheet" href="/css/footer.css" />
</head>
<body>
  <div class="sidebar">
    <h2><strong>Dashboard</strong></h2>
    <button onclick="window.location.href='/admin/usuarios'">Usuarios</button>
    <button onclick="window.location.href='/admin/transportes'">Transportes</button>
    <button onclick="window.location.href='/admin/cargarcamionadm'">Cargar Camión</button>
    <button onclick="window.location.href='/admin/retirarpalletadm'">Retirar Pallet</button>
    <button onclick="window.location.href='/admin/cambioentrebahiasadm'">Cambio entre Bahías</button>
    <button onclick="window.location.href='/admin/tiempos'">Tiempos</button>
    <button class="logout-btn" id="logoutBtn">Cerrar Sesión</button>
  </div>

  <div class="content">
    <div class="header">
      <h1>Resumen de Tiempos</h1>
      <div class="fecha">
        <strong>Miércoles 2 de abril de 2025</strong><br />
        16:00 hrs
      </div>
    </div>

    <!-- Resumen general -->
    <div class="section">
      <h2>Resumen general</h2>
      <table class="summary-table">
        <tr>
          <th>Actividades con mayor tiempo</th>
          <th>Tiempo total de las actividades realizadas</th>
          <th>Turno</th>
        </tr>
        <tr>
          <td>
            • Cargar Camión<br />
            • Cambio entre bahías<br />
            • Retirar Pallet
          </td>
          <td>
            • 33:09:23<br />
            • 24:10:02<br />
            • 20:32:04
          </td>
          <td>
            • Tarde<br />
            • Tarde<br />
            • Noche
          </td>
        </tr>
      </table>
    </div>

    <!-- Resumen diario -->
    <div class="section">
      <h2>Resumen diario</h2>
      <table class="summary-table">
        <tr>
          <th>Tiempo total de actividades hoy</th>
          <th>Actividad más frecuente</th>
          <th>Turno más productivo</th>
        </tr>
        <tr>
          <td>• 20:32:45</td>
          <td>• Cargar Camión</td>
          <td>• Mañana</td>
        </tr>
      </table>
    </div>

    <!-- Resumen por usuario -->
    <div class="section">
      <h2>Resumen por usuario</h2>
      <table class="tasks-table">
        <tr>
          <th>Usuario</th>
          <th>Turno</th>
          <th>Total tareas</th>
          <th>Tiempo total</th>
          <th>Fecha</th>
          <th>Tiempo promedio por tarea</th>
          <th>Actividad más frecuente</th>
        </tr>
        <tr>
          <td>• Juan Sandoval</td>
          <td>• Mañana</td>
          <td>• 30</td>
          <td>• 03:24:27</td>
          <td>• 2025-04-01</td>
          <td>• 00:02:27</td>
          <td>• Retirar Pallet</td>
        </tr>
      </table>
    </div>
  </div>

  <script>
    const logoutBtn = document.getElementById('logoutBtn');
    if (logoutBtn) {
      logoutBtn.addEventListener('click', () => {
        sessionStorage.clear();
        localStorage.clear();
        localStorage.removeItem('tareaActual');
        window.location.href = '/';
      });
    }
  </script>
</body>
</html>
