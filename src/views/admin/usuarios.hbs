<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard - Coke Kronos</title>
  <link rel="stylesheet" href="/css/usuarios.css"/>
  <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
  <div class="sidebar">
    <h2>Dashboard</h2>
    <button onclick="window.location.href='/admin/inicio'">Inicio</button>
    <button onclick="window.location.href='/admin/cargarCamionAdmin'">Cargar Camión</button>
    <button onclick="window.location.href='/admin/retirarPalletAdmin'">Retiro de Pallet</button>
    <button onclick="window.location.href='/admin/cambioEntreBahiasAdmin'">Cambio entre Bahías</button>
    <button onclick="window.location.href='/admin/tiempos'">Tiempos</button>
    <button class="logout-btn" id="logoutBtn">Cerrar Sesión</button>
  </div>

  <div class="content">
    <div class="header">
      <h1>Lista de Usuarios</h1>
      <div class="fecha">
        {{!-- Puedes hacer dinámico luego si quieres --}}
        <strong>{{fechaActual}}</strong><br />
        {{horaActual}}
      </div>
    </div>

    <table class="tasks-table">
      <tr>
        <th>Usuario</th>
        <th>Actividades Realizadas</th>
        <th>Turno</th>
        <th>Tiempo total de las actividades realizadas</th>
        <th>Fecha</th>
      </tr>
      {{#each usuariosConActividades}}
      <tr>
        <td>• {{nombre}}</td>
        <td>
          • Cargar Camión ({{actividades.cargarCamion}})<br>
          • Cambio entre bahías ({{actividades.cambioBahia}})<br>
          • Retirar Pallet ({{actividades.retirarPallet}})
        </td>
        <td>• {{turno}}</td>
        <td>• {{tiempoTotal}}</td>
        <td>• {{fechaUltimaActividad}}</td>
      </tr>
      {{/each}}
    </table>

    <br>

    <label for="tarea-select" class="label-destacado">Selecciona una tarea</label>
    <select id="tarea-select" class="selector">
      <option>Cargar Camión</option>
      <option>Cambio entre bahías</option>
      <option>Retirar Pallet</option>
    </select>

    {{!-- Segunda tabla: podrías llenarla si quieres por tipo de tarea seleccionada dinámicamente con JS (por ahora la dejamos estática) --}}

  </div>

<script>
  const logoutBtn = document.getElementById('logoutBtn');
  if (logoutBtn) {
      logoutBtn.addEventListener('click', () => {
          sessionStorage.clear();
          localStorage.clear();
          localStorage.removeItem('tareaActual');
          window.location.href = '/';
      });
  }
</script>

</body>
</html>
