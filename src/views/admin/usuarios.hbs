<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard - Coke Kronos</title>
  <link rel="stylesheet" href="/css/usuarios.css"/>
  <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
  <div class="sidebar">
    <h2>Dashboard</h2>
    <button onclick="window.location.href='/admin/inicio'">Inicio</button>
    <button onclick="window.location.href='/admin/cargarCamionAdmin'">Cargar Camión</button>
    <button onclick="window.location.href='/admin/retirarPalletAdmin'">Retiro de Pallet</button>
    <button onclick="window.location.href='/admin/cambioEntreBahiasAdmin'">Cambio entre Bahías</button>
    <button onclick="window.location.href='/admin/tiempos'">Tiempos</button>
    <button class="logout-btn" id="logoutBtn">Cerrar Sesión</button>
  </div>

  <div class="content">
    <div class="header">
      <h1>Lista de Usuarios</h1>
      <div class="fecha">
        <strong>{{fechaActual}}</strong><br />
        {{horaActual}}
      </div>
    </div>

    <table class="tasks-table">
      <tr>
        <th>Usuario</th>
        <th>Actividades Realizadas</th>
        <th>Turno</th>
        <th>Tiempo total de las actividades realizadas</th>
        <th>Fecha</th>
      </tr>
      {{#each usuariosConActividades}}
      <tr>
        <td>• {{nombre}}</td>
        <td>
          • Cargar Camión ({{actividades.cargarCamion}})<br>
          • Cambio entre bahías ({{actividades.cambioBahia}})<br>
          • Retirar Pallet ({{actividades.retirarPallet}})
        </td>
        <td>• {{turno}}</td>
        <td>• {{tiempoTotal}}</td>
        <td>• {{fechaUltimaActividad}}</td>
      </tr>
      {{/each}}
    </table>

    <br>

    <label for="tarea-select" class="label-destacado">Selecciona una tarea</label>
    <select id="tarea-select" class="selector">
      <option>Cargar Camión</option>
      <option>Cambio entre bahías</option>
      <option>Retirar Pallet</option>
    </select>

    <table id="tabla-tarea" class="tasks-table">
      <thead>
        <tr>
          <th>Usuario</th>
          <th>Duración</th>
          <th>Fecha</th>
          <th>Turno</th>
        </tr>
      </thead>
      <tbody id="tbody-tarea">
        {{#each tareas.cargarCamion}} <!-- Mostrar por defecto -->
        <tr>
          <td>{{this.nombreUsuario}}</td>
          <td>{{this.duracion}}</td>
          <td>{{this.fecha}}</td>
          <td>{{this.turno}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

<script>
  const logoutBtn = document.getElementById('logoutBtn');
  if (logoutBtn) {
      logoutBtn.addEventListener('click', () => {
          sessionStorage.clear();
          localStorage.clear();
          localStorage.removeItem('tareaActual');
          window.location.href = '/';
      });
  }

  // Datos desde backend
  const tareas = {
    "Cargar Camión": {{{json tareas.cargarCamion}}},
    "Cambio entre bahías": {{{json tareas.cambioBahia}}},
    "Retirar Pallet": {{{json tareas.retirarPallet}}}
  };

  const select = document.getElementById("tarea-select");
  const tbody = document.getElementById("tbody-tarea");

  select.addEventListener("change", () => {
    const seleccion = select.value;
    const datos = tareas[seleccion] || [];
    tbody.innerHTML = "";

    datos.forEach(reg => {
      const tr = document.createElement("tr");

      const tdUsuario = document.createElement("td");
      tdUsuario.textContent = reg.nombreUsuario || reg.idUsuario;

      const tdDuracion = document.createElement("td");
      tdDuracion.textContent = reg.duracion || "00:00:00";

      const tdFecha = document.createElement("td");
      tdFecha.textContent = reg.fecha ? reg.fecha.split("T")[0] : "";

      const tdTurno = document.createElement("td");
      tdTurno.textContent = reg.turno || "N/A";

      tr.appendChild(tdUsuario);
      tr.appendChild(tdDuracion);
      tr.appendChild(tdFecha);
      tr.appendChild(tdTurno);

      tbody.appendChild(tr);
    });
  });
</script>

</body>
</html>
