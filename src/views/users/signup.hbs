<head>
    <!-- Se enlazan las hojas de estilo CSS para la página -->
    <link rel="stylesheet" href="/css/espera.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/users.css">

    <meta charset="UTF-8">

    <!-- Se establece la configuración para que el diseño sea responsive en dispositivos móviles -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Título que se mostrará en la pestaña del navegador -->
    <title>Registrar Usuario</title>
</head>

<body>
    <!-- Contenedor principal del formulario de registro -->
    <div class="container">
        <h2>Registrar Usuario</h2>

        <!-- Formulario que envía los datos al servidor -->
        <form action="/users/signup" method="post">

            <!-- Campo de texto para el nombre del usuario -->
            <div class="form-group">
                <input type="text" name="name" placeholder="Nombre" value="{{name}}" required>
            </div>

            <!-- Campo de texto para el correo electrónico -->
            <div class="form-group">
                <input type="email" name="email" placeholder="Email" value="{{email}}" required>
            </div>

            <!-- Menú desplegable para seleccionar el rol del usuario -->
            <div class="form-group">
                <select name="rol" required>
                    <option value="" disabled selected>Selecciona un rol</option>
                    <option value="administrador">Administrador</option>
                    <option value="jefeDeTurno">Jefe de Turno</option>
                    <option value="operador">Operador</option>
                </select>
            </div>

            <!-- Campo para ingresar la contraseña -->
            <div class="form-group">
                <input type="password" name="password" placeholder="Contraseña" required>
            </div>

            <!-- Campo para confirmar la contraseña -->
            <div class="form-group">
                <input type="password" name="confirm_password" placeholder="Confirmar Contraseña" required>
            </div>

            <!-- Botón para enviar el formulario -->
            <button class="btn" type="submit-btn">Registrarse</button>
        </form>
    </div>
</body>
