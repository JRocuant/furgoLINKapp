
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Coke Kronos</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/espera.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>


<!-- Contenedor principal del login -->
<div class="login-container">
    <div class="login-card">
        <h1>Coke-KRONOS</h1>

        <!-- Formulario de inicio de sesión -->
        <form id="loginForm" action="/users/signin" method="POST">

            <!-- Grupo de input para el usuario -->
            <div class="input-group">
                <input type="email" class="form-control" name="email" placeholder="Email">
            </div>

            <!-- Grupo de input para la contraseña -->
            <div class="input-group">
                <input type="password" class="form-control" name="password" placeholder="Contraseña">
            </div>

            <!-- Botón de envío del formulario -->
            <button class="btn btn-primary btn-block">
                        Iniciar Sesión                       
            </button>

            <!-- Mensaje de error que se mostrará si la validación falla -->
            <!--<p id="errorMessage" class="error-message"></p>-->

            <!-- Enlace para recuperación de contraseña -->
            <p><a href="/users/olvido" class="forgot-password">¿Olvidaste tu contraseña?</a></p>
        </form>
    </div>
</div>
